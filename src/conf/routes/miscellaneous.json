{
	"/" : {
		"module"   : "version"
	},
	"/version" : {
		"module" : "version"
	},
	"/accounts" : {
		"module" 		: "accounts",
		"authorisation"	:"user",
		"subroutes" 	: {
			"/create" : { 
				"method"		: "create", 
				"req_method"	: "post"
			},
			"/delete/:id" : {
				"method"	: "delete"
			}
		}
	},
	"/nimsoft":{
		"module"	:"nimsoft",
		"method" 	:"status",
		"subroutes" : {
			"/disable" : { 
				"method"		: "disable", 
				"authorisation" : "admin",
				"params"		: {
					"audit_log_message" : "Disable nimsoft"
				} 
			},
			"/enable" : { 
				"method"		: "enable", 
				"authorisation" : "admin",
				"params"		: {
					"audit_log_message" : "Enable nimsoft"
				}  
			}
		}
	},
	"/roles":{
		"module" 		: "login",
		"authorisation" : "user",
		"method" 		: "getRoles"
	},
	"/form-fields":{
		"module"        : "form_fields",
		"authorisation" : "user",
		"subroutes"		: {
			"/server-sizes"	: {
				"authorisation" : "user",
				"method"        : "getServerSizes"
			},
			"/server-locations"	: {
				"authorisation" : "user",
				"method"        : "getServerLocations"
			}
		}
	},
	"/static-content" : {
		"module"        : "static_content",
		"authorisation" : "user",
		"subroutes" : {
			"/:area" : {
				"authorisation" : "user",
				"method"        : "getContent" 
			},
			"/versions/:area" : { 
				"method"        : "getContentVersions", 
				"authorisation" : "admin" 
			},
			"/version/:area/:version" : { 
				"method"        : "getContentByVersion" , 
				"authorisation" : "admin"
			},
			"/activate/:area" : { 
				"method"        : "activateContentVersion",
				"req_method"    : "post", 
				"authorisation" : "admin"  
			},
			"/save/:area" : { 
				"method"        : "saveContent",
				"req_method"    : "post" , 
				"authorisation" : "admin",
				"params"		: {
					"audit_log_message" : "Static content saved"
				}  
			},
			"/delete/:area" : { 
				"method"        : "deleteContent",
				"req_method"    : "get" , 
				"authorisation" : "admin",
				"params"		: {
					"audit_log_message" : "Static content saved"
				}  
			}
		}
	},
	"/audit-log" :{
		"module"        : "db_crud",
		"method"        : "read",
		"authorisation" : "superAdmin",
		"req_method"	: "post",
		"params"		: {
			"after" 			: [ "audit_log.getUserName", "audit_log.getParams" ],
			"model"   			: "auditLog",
			"sort" 				: {"timestamp": -1},
			"fields" 			: [ "user_id", "path","params", "timestamp", "message"]
		},
		"subroutes" : {
			"/filter" : {
				"req_method"	: "post",
				"module"    	: "db_crud",
				"method"		: "read",
				"authorisation" : "superAdmin",
				"params"		: {
					"before" 			: [ "audit_log.setQuery"],
					"after" 			: [ "audit_log.getUserName", "audit_log.getParams" ],
					"model"   			: "auditLog",
					"sort" 				: {"timestamp": -1},
					"query"  			: { 
						"user_id" : {
							"$regex" : "${user_id}" 
						}, 
						"timestamp" : { 
							"$gte" : "${startDate}",
							"$lt"  : "${endDate}"
						} 
					},
					"fields" 			: [ "user_id", "path","params", "timestamp", "message"]
				}
			}
		}		
	}
}